{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "/manifest.json$"
      ],
      "matchStrings": [
        "schiene==?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "schiene"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "addLabels": [
        "python"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchDepTypes": [
        "dev"
      ],
      "rangeStrategy": "pin",
      "automerge": true
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}